<div class="banner position-relative">
  <button type="button" class="btn btn-success position-absolute"><%= "#{@list.movies.size} movies" %></button>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between">
    <h2>My Bookmarks</h2>
    <%= link_to "add a movie",new_list_bookmark_path(@list), :class => "btn btn-success text-white" %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card col-3" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= "#{bookmark.movie.title} #{bookmark.movie.rating}" %><i class="fas fa-star text-danger"></i></h5>
          <p class="card-text"><%= bookmark.movie.overview  %></p>
          <hr>
          <i class="fas fa-quote-left"></i>
            <%=  bookmark.comment%>
          <%= link_to "X", bookmark_path(bookmark), method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>
